{
    "type": "temporary_ban",
    "priority": 9,
    "duration": "20m",
    "trigger": {
        "scope": "client",
        "threshold": 3,
        "within": "5m",
        "key": "violations"
    },
    "response": {
        "status": 403,
        "message": "Client temporarily banned due to repeated violations."
    },
    "notify": {
        "channel": "slack",
        "topic": "security",
        "message": "Temporary ban issued to {{clientIP}}",
        "details": {
            "rule": "{{ruleName}}",
            "endpoint": "{{endpoint}}",
            "duration": "20m"
        }
    }
}
