{
    "name": "ddosDetection",
    "type": "ddos",
    "enabled": true,
    "params": {
        "requestsPerMinute": 100
    },
    "actions": [
        {
            "type": "rate_limit",
            "limit": "50 rpm",
            "response": {
                "status": 429,
                "message": "Too many global requests. Please slow down."
            }
        },
        {
            "type": "temporary_ban",
            "duration": "10m",
            "response": {
                "status": 403,
                "message": "Temporary ban due to suspected DDoS activity."
            }
        }
    ]
}
