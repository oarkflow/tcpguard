{
    "name": "sessionHijacking",
    "type": "pipeline",
    "enabled": true,
    "priority": 80,
    "pipeline": {
        "nodes": [
            {
                "id": "check_session",
                "type": "condition",
                "function": "checkSessionHijacking",
                "params": {
                    "maxConcurrentSessions": 1,
                    "sessionTimeout": "24h"
                }
            }
        ],
        "edges": [ ]
    },
    "actions": [
        {
            "type": "temporary_ban",
            "priority": 9,
            "duration": "30m",
            "response": {
                "status": 403,
                "message": "Session hijacking detected."
            },
            "notify": {
                "channel": "webhook",
                "topic": "https://siem.example.com/api/security-events",
                "message": "ðŸ”´ CRITICAL: Session hijacking detected from {{clientIP}}",
                "details": {
                    "severity": "critical",
                    "event_type": "session_hijacking",
                    "client_ip": "{{clientIP}}",
                    "endpoint": "{{endpoint}}",
                    "user_id": "{{userID}}",
                    "rule_name": "{{ruleName}}",
                    "action_type": "{{actionType}}",
                    "timestamp": "{{timestamp}}",
                    "requires_investigation": "true",
                    "ban_duration": "30m"
                }
            }
        }
    ]
}
