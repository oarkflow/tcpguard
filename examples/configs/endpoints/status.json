{
    "name": "status",
    "endpoint": "/api/status",
    "rateLimit": {
        "requestsPerMinute": 5,
        "burst": 2
    },
    "actions": [
        {
            "type": "jitter_warning",
            "jitterRangeMs": [ 500, 2000 ],
            "response": {
                "status": 429,
                "message": "Too many status requests. Please wait a moment."
            }
        },
        {
            "type": "rate_limit",
            "response": {
                "status": 429,
                "message": "Rate limit exceeded. Please try again later."
            }
        }
    ]
}
